{% extends 'base.html.twig' %}

{% block body %}

<style>
    ul ul-columns-3 {
        -webkit-column-count: 3;
        -moz-column-count: 3;
        column-count: 3;
    }
</style>

<div class="container">

    <div class="my-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h2 id="tables">KeePassXC</h2>
                </div>

                <div class="row">
                    <div class="col-lg-6">
{#                        <h2 id="nav-breadcrumbs">Path</h2>#}
                        <div class="bs-component">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_root_path', {'path':''}) }}">Root</a></li>
                                {% for path in pathList %}
                                    <li class="breadcrumb-item {{ loop.last == true ? 'active' }}">{{ path }}</li>
                                {% endfor %}
                            </ol>
                        </div>
                    </div>
                </div>

                <div class="bs-component">
                    <ul class="ul-columns-3 list-unstyled card-columns">
                        {% for item in items %}
                            <li>{% if item.type == 'f' %}
                                    <a href="{{ path('app_root_path', {'path':path ~ item.title}) }}">
                                        <i class="fa-regular fa-folder"></i> {{ item.title }}
                                    </a>
                                {% else %}
                                    <a href="{{ path('app_item_view', {'path':item.title}) }}">
                                        <i class="fa-solid fa-key"></i> {{ item.title }}
                                    </a>
                                {% endif %}

                            </li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
